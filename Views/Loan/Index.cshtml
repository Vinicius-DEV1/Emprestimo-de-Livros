@model IEnumerable<LoansModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1> Loans </h1>
        <a class="btn btn-success mx-2" asp-controller="Loan" asp-action="Register"> <i class="bi bi-file-earmark-plus mx-2"></i> Register new loan</a>
    </div>
<table class="table table-light table-hover mt-5" id="table">
    <thead>
        <tr>
            <th scope="col">Receiver</th>
            <th scope="col">Supplier</th>
            <th scope="col">Book</th>
            <th scope="col">Last Update</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>

        @if(Model != null)
        {

            foreach(var loan in Model )
            {
                <tr>
                    <th scope="row">@loan.Receiver</th>
                    <td>@loan.Supplier</td>
                    <td>@loan.BorrowedBook</td>
                    <td>@loan.LastUpdate</td>
                    <td>
                        <a asp-controller="Loan" asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-warning mx-2"> <i class="bi bi-pencil-square mx-2"></i> Edit</a>
                            <a asp-controller="Loan" asp-action="Delete" asp-route-id="@loan.Id" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill mx-2"></i> Delete</a>
                    </td>
                </tr>
            }
        }



    </tbody>
</table>

</div>
